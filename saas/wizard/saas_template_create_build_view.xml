<odoo>
    <record id="saas_template_create_build" model="ir.ui.view">
        <field name="name">SaaS Template Create Build</field>
        <field name="model">saas.template.create_build</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="build_name"/>
                    <field invisible="1" name="template_id"/>
                    <field domain="[('template_id', '=', template_id), ('state', '=', 'done')]" invisible="random == True" name="template_operator_id"/>
                    <field invisible="1" name="template_operator_count"/>
                    <field invisible="template_operator_count in [0, 1]" name="random"/>
                    <field name="build_post_init_ids"><tree editable="bottom">
                            <field name="key"/>
                            <field name="value"/>
                        </tree>
                        <form string="Build post init form">
                            <group>
                                <field name="key"/>
                                <field name="value"/>
                            </group>
                        </form></field>
                </group>
                <footer>
                    <button class="oe_highlight" special="cancel" string="Cancel"/>
                    <button class="oe_highlight" name="create_build" string="Create Build" type="object"/>
                </footer>
            </form></field>
    </record>
</odoo>
